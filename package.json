{
  "name": "menu-ms",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "start": "cd apps/api && node dist/main.js",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate": "cd apps/api && npx prisma generate",
    "migrate:dev": "cd apps/api && npx prisma migrate dev --name init",
    "migrate:deploy": "cd apps/api && npx prisma migrate deploy"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@nestjs/serve-static": "^4.0.2"
  }
}
