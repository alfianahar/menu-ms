{
  "version": 2,
  "buildCommand": "yarn build",
  "builds": [
    {
      "src": "apps/web/next.config.js",
      "use": "@vercel/next",
      "config": {
        "outputDirectory": "out"
      }
    },
    {
      "src": "apps/api/src/main.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/api/src/main.ts"
    },
    {
      "src": "/(.*)",
      "dest": "apps/web/out/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
