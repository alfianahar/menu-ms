{
  "version": 2,
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next",
      "config": {
        "buildCommand": "next build"
      }
    },
    {
      "src": "apps/api/src/main.ts",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npx prisma generate && nest build"
      }
    },
    {
      "src": "apps/web/out/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "apps/api/src/main.ts"
    }
  ]
}
