{
  "version": 2,
  "buildCommand": "yarn build",
  "builds": [
    {
      "src": "apps/web/out/*",
      "use": "@now/static"
    },
    {
      "src": "apps/api/src/main.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/api/src/main.ts"
    },
    {
      "src": "/(.*)",
      "dest": "apps/web/src/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
